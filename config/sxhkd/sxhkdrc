# super + alt + Escape
#     bspc quit

# super + {_,shift + }q
#     bspc node -{c,k}

# super + t
#     bspc desktop -l next

# super + apostrophe
#     bspc window -s last

# super + ctrl + shift + p
#     $XDG_CONFIG_HOME/polybar/run.sh &

# # Attach to a detached session. If none is available create a new one, rather
# # than attach to one that is already attached to elsewhere.
# super + Return
#     xst -e bash -c "(tmux ls | grep -qEv 'attached|scratch' && tmux at) || tmux"

# ctrl + super + Return
#     xst

# super + grave
#     scratch

# super + shift + grave
#     emacsclient -e '(open-scratch-frame)'

super + space
    ~/.dotfiles/bin/rofi/appmenu

alt + Tab
    ~/.dotfiles/bin/rofi/windowmenu

super + backslash
    ~/.dotfiles/bin/rofi/passmenu

super + slash
    ~/.dotfiles/bin/rofi/filemenu -x

alt + shift + v
    ~/.dotfiles/bin/rofi/clipboardmenu


super + Return
    alacritty -e bash -c "(tmux ls | grep -qEv 'attached|scratch' && tmux at) || tmux"

super + o
    xdg-open ~/Downloads

# program launcher
# super + space
#     launcher-alt

# alt + Tab
#     rofi -show window

super + grave
    scratch

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

super + ctrl + shift + p
    ~/.config/polybar/run.sh

ctrl + shift + .
    dunstctl context

# bspwm hotkeys
#

# quit/restart bspwm
super + ctrl + shift + e
    bspc quit
super + shift + r
    bspc wm -r

# close and kill
alt + {_,shift + }q
    bspc node -{c,k}

# lockscreen
ctrl + alt + q
    screenlock

# alternate between the tiled and monocle layout
alt + ctrl + m
    bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
    bspc node -g marked && sleep 0.2 && bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
    bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
alt + {h,j,k,l}
    bspc-focus {west,south,north,east}
alt + ctrl + {_,shift+} {h,j,k,l}
    bspc-swap {_,-m} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
    bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + {h,l}
    bspc monitor -f {west,east}

super + {k,j}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {Tab,shift+Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
alt + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {1-9,0}
    bspc desktop -f '{1-9,10}.local'

# move nodes between desktops
super + shift + {1-9, 0}
    bspc node --to-desktop '{1-9,10}.local' --follow

super + shift + {k,j}
    bspc node --to-desktop {prev,next} --follow

super + shift + {h,l}
    bspc node --to-monitor {west,east} --follow

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc-resize {left,bottom,top,right}

super + alt + {Left,Down,Up,Right}
    bspc-resize {left,bottom,top,right}

#
# Media keys
#

alt + shift + {_,ctrl+} s
    screenshot {clipboard,save}

alt + shift + r
    rec -s ~/Pictures/Screenshots/$(date +%F-%T).mp4

XF86MonBrightnessUp
    light -A 5
XF86MonBrightnessDown
    light -U 5

XF86AudioMute
    amixer -q set Master toggle
XF86AudioLowerVolume
    amixer -q set Master 10%- unmute
XF86AudioRaiseVolume
    amixer -q set Master 10%+ unmute

XF86Audio{Play,Pause}
    spt-send toggle
XF86AudioNext
    spt-send next
XF86AudioPrev
    spt-send prev

alt + {Down,Up}
    amixer -q set Master 10%{-,+} unmute
alt + {Left,Right}
    spt-send {prev,next}
