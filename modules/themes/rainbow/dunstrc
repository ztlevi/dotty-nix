[global]
    alignment = left
    markup = full
    bounce_freq = 0
    browser = launch-browser
    dmenu = /usr/bin/rofi -dmenu -p dunst:
    follow = keyboard
    font = FiraCode Nerd Font 12
    format = "%s\n%b"
    # geometry [{width}]x{height}][+/-{x}+/-{y}]
    geometry = "1000x80-25+100"
    history_length = 20
    horizontal_padding = 32
    idle_threshold = 120
    ignore_newline = no
    indicate_hidden = yes
    line_height = 0
    padding = 24
    separator_color = "#1D252C"
    separator_height = 2
    show_age_threshold = 60
    show_indicators = yes
    shrink = no
    sort = yes
    startup_notification = false
    sticky_history = yes
    transparency = 1
    word_wrap = yes
    max_icon_size = 64
    # Align icons left/right/off
    icon_position = right
    # Paths to default icons.
    icon_path = /usr/share/icons/hicolor/32x32/apps/:/usr/share/icons/Adwaita/32x32/actions/
    frame_width = 0
    frame_color = "#384551"
    mouse_left_click = do_action
    mouse_middle_click = close_current
    mouse_right_click = close_all
    corner_radius = 10

[shortcuts]
    context = ctrl+shift+period

[play_sound]
    summary = "*"
    script = dunst-sound.sh

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#1564bf"
    foreground = "#ffffff"
    timeout = 5

[urgency_normal]
    background = "#1564bf"
    foreground = "#ffffff"
    timeout = 8

[urgency_critical]
    background = "#D95468"
    foreground = "#384551"
    timeout = 0

